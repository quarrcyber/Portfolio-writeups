  <script>
    // HI·ªÜU ·ª®NG G√ï M√ÅY
    const typewriterElement = document.getElementById('typewriter-content');
    const fullText = `N·∫øu c√≥ th·ªÉ ch·ªçn m·ªôt n∆°i an to√†n, ƒë√≥ s·∫Ω l√† b√™n c·∫°nh em.
C√†ng d√†nh nhi·ªÅu th·ªùi gian b√™n em, anh c√†ng y√™u em nhi·ªÅu h∆°n.
ƒêo·∫°n vƒÉn n√†y ch·ªâ l√† v√≠ d·ª• minh h·ªça, kh√¥ng ph·∫£n √°nh c·∫£m x√∫c th·∫≠t s·ª±.

‚Äî Love _`;

    function typeWriter(text, i = 0) {
      if (i < text.length) {
        typewriterElement.innerHTML = text.substring(0, i + 1) + '<span style="opacity:0.8;">|</span>';
        setTimeout(() => typeWriter(text, i + 1), 30);
      } else {
        typewriterElement.innerHTML = text;
      }
    }

    setTimeout(() => {
      typeWriter(fullText);
    }, 1000);

    // ƒê·ªíNG H·ªí ƒê·∫æM NG∆Ø·ª¢C (B·∫¢N R√öT G·ªåN ƒê√É TEST)
    function updateCounter() {
      // Ng√†y b·∫Øt ƒë·∫ßu: 19/11/2023 00:00:00 (gi·ªù Vi·ªát Nam)
      const startDate = new Date("2023-11-19T00:00:00+07:00").getTime();
      
      // L·∫•y gi·ªù Vi·ªát Nam hi·ªán t·∫°i
      const nowVietnam = new Date(
        new Date().toLocaleString("en-US", { timeZone: "Asia/Ho_Chi_Minh" })
      ).getTime();
      
      const diff = nowVietnam - startDate;
      
      if (diff < 0) {
        document.getElementById('years').textContent = "00";
        document.getElementById('days').textContent = "000";
        document.getElementById('hours').textContent = "00";
        document.getElementById('minutes').textContent = "00";
        document.getElementById('seconds').textContent = "00";
        return;
      }

      // T√≠nh to√°n th·ªùi gian
      const totalSeconds = Math.floor(diff / 1000);
      const years = Math.floor(totalSeconds / (365 * 24 * 60 * 60));
      const remainingAfterYears = totalSeconds % (365 * 24 * 60 * 60);
      const days = Math.floor(remainingAfterYears / (24 * 60 * 60));
      const hours = Math.floor((remainingAfterYears % (24 * 60 * 60)) / (60 * 60));
      const minutes = Math.floor((remainingAfterYears % (60 * 60)) / 60);
      const seconds = Math.floor(remainingAfterYears % 60);

      // C·∫≠p nh·∫≠t UI
      document.getElementById('years').textContent = String(years).padStart(2, '0');
      document.getElementById('days').textContent = String(days).padStart(3, '0');
      document.getElementById('hours').textContent = String(hours).padStart(2, '0');
      document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
      document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
    }

    // Ch·∫°y ƒë·ªìng h·ªì
    setInterval(updateCounter, 1000);
    updateCounter(); // Ch·∫°y ngay khi t·∫£i trang
  </script>
