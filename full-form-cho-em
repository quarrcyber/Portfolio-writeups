  <script>
    // HI·ªÜU ·ª®NG G√ï M√ÅY
    const typewriterElement = document.getElementById('typewriter-content');
    const fullText = `N·∫øu c√≥ th·ªÉ ch·ªçn m·ªôt n∆°i an to√†n, ƒë√≥ s·∫Ω l√† b√™n c·∫°nh em.
C√†ng d√†nh nhi·ªÅu th·ªùi gian b√™n em, anh c√†ng y√™u em nhi·ªÅu h∆°n.
ƒêo·∫°n vƒÉn n√†y ch·ªâ l√† v√≠ d·ª• minh h·ªça, kh√¥ng ph·∫£n √°nh c·∫£m x√∫c th·∫≠t s·ª±.

‚Äî Love _`;

    function typeWriter(text, i = 0) {
      if (i < text.length) {
        typewriterElement.innerHTML = text.substring(0, i + 1) + '<span style="opacity:0.8;">|</span>';
        setTimeout(() => typeWriter(text, i + 1), 30);
      } else {
        typewriterElement.innerHTML = text;
      }
    }

    setTimeout(() => {
      typeWriter(fullText);
    }, 1000);

    // ƒê·ªíNG H·ªí ƒê·∫æM NG∆Ø·ª¢C
    function updateCounter() {
      const startDate = new Date("2023-11-19T00:00:00+07:00").getTime();
      const nowVietnam = new Date(
        new Date().toLocaleString("en-US", { timeZone: "Asia/Ho_Chi_Minh" })
      ).getTime();
      const diff = nowVietnam - startDate;

      if (diff < 0) {
        document.getElementById('years').textContent = "00";
        document.getElementById('days').textContent = "000";
        document.getElementById('hours').textContent = "00";
        document.getElementById('minutes').textContent = "00";
        document.getElementById('seconds').textContent = "00";
        return;
      }

      const totalSeconds = Math.floor(diff / 1000);
      const years = Math.floor(totalSeconds / (365 * 24 * 60 * 60));
      const remainingAfterYears = totalSeconds % (365 * 24 * 60 * 60);
      const days = Math.floor(remainingAfterYears / (24 * 60 * 60));
      const hours = Math.floor((remainingAfterYears % (24 * 60 * 60)) / (60 * 60));
      const minutes = Math.floor((remainingAfterYears % (60 * 60)) / 60);
      const seconds = Math.floor(remainingAfterYears % 60);

      document.getElementById('years').textContent = String(years).padStart(2, '0');
      document.getElementById('days').textContent = String(days).padStart(3, '0');
      document.getElementById('hours').textContent = String(hours).padStart(2, '0');
      document.getElementById('minutes').textContent = String(minutes).padStart(2, '0');
      document.getElementById('seconds').textContent = String(seconds).padStart(2, '0');
    }

    setInterval(updateCounter, 1000);
    updateCounter();

    // H√ÄM B·∫¨T/T·∫ÆT NH·∫†C
    function toggleMusic() {
      const music = document.getElementById('backgroundMusic');
      if (music.paused) {
        music.play();
        alert("üé∂ Nh·∫°c nh∆∞ ri c√≥ hay hong :3 Nghe b√†i ni v·ªõi anh nha ‚ù§Ô∏è");
      } else {  
        music.pause();
        alert("üîá Nh·∫°c t·∫Øt √πii. Em c√≥ th·ªÉ b·∫≠t l·∫°i b·∫•t c·ª© l√∫c n√†o n√®!");
      }
    }

    // T·ª∞ ƒê·ªòNG PH√ÅT NH·∫†C KHI M·ªû TRANG (T√ôY CH·ªåN)
    setTimeout(() => {
      if (!musicInitialized) {
        const music = document.getElementById('backgroundMusic');
        music.muted = false;
        music.play().catch(() => {});
      }
    }, 3000);

    // H·ªÜ TH·ªêNG M·∫¨T KH·∫®U (ƒê√É S·ª¨A L·ªñI)
    document.addEventListener('DOMContentLoaded', () => {
      const lockScreen = document.getElementById('lock-screen');
      const passwordDigits = document.querySelectorAll('.password-display .digit');
      const errorMessage = document.getElementById('error-message');
      const clearKey = document.getElementById('clear-key');
      const submitKey = document.getElementById('submit-key');
      const keys = document.querySelectorAll('.key[data-digit]');
      
      // C√ÄI ƒê·∫∂T M·∫¨T KH·∫®U (THAY "1811" B·∫∞NG M·∫¨T KH·∫®U C·ª¶A B·∫†N)
      const CORRECT_PASSWORD = "1811";
      let currentPassword = "";

      // X·ª¨ L√ù NH·∫¨P S·ªê
      keys.forEach(key => {
        key.addEventListener('click', () => {
          if (currentPassword.length < 4) {
            currentPassword += key.dataset.digit;
            updatePasswordDisplay();
          }
        });
      });

      // X√ìA M·∫¨T KH·∫®U
      clearKey.addEventListener('click', () => {
        currentPassword = "";
        updatePasswordDisplay();
        hideError();
      });

      // KI·ªÇM TRA M·∫¨T KH·∫®U
      submitKey.addEventListener('click', checkPassword);
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') checkPassword();
      });

      function updatePasswordDisplay() {
        passwordDigits.forEach((digit, index) => {
          digit.textContent = index < currentPassword.length ? "‚Ä¢" : "";
        });
      }

      function hideError() {
        errorMessage.textContent = "";
      }

      function checkPassword() {
        if (currentPassword === CORRECT_PASSWORD) {
          // ·∫®N TRANG M·∫¨T KH·∫®U V·ªöI HI·ªÜU ·ª®NG
          lockScreen.style.opacity = "0";
          setTimeout(() => {
            lockScreen.style.display = "none";
            
            // T·ª∞ ƒê·ªòNG PH√ÅT NH·∫†C SAU KHI M·ªû KH√ìA
            const music = document.getElementById('backgroundMusic');
            if (music) {
              music.play().catch(e => console.log("L·ªói ph√°t nh·∫°c:", e));
            }
          }, 500);
        } else {
          errorMessage.textContent = "‚ùå Sai m·∫≠t kh·∫©u! Th·ª≠ l·∫°i.";
          currentPassword = "";
          updatePasswordDisplay();
          // HI·ªÜU ·ª®NG RUNG
          lockScreen.style.animation = "shake 0.5s";
          setTimeout(() => {
            lockScreen.style.animation = "";
          }, 500);
        }
      }
    });
  </script>
